<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.indoorlocalizer.app.LocatorSelector">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp">
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="OFF"
            android:textOn="ON"
            android:id="@+id/wifi_toggleButton"
            android:layout_alignRight="@+id/wifiInfoText"
            android:checked="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/WiFi_status_text"
            android:id="@+id/wifiInfoText"
            android:layout_alignTop="@+id/wifi_toggleButton" />
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="357dp"
        android:id="@android:id/list"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
