    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/localize_start"
            android:id="@+id/localize_start_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:layout_marginLeft="10sp"
            android:contentDescription="@string/localize_content_description" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"/>
        <ImageView
            android:src="@drawable/retrieve_start"
            android:layout_marginRight="10sp"
            android:id="@+id/retrieve_start_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:contentDescription="@string/retrieve_image_content_description" />
    </LinearLayout>
